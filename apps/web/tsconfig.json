{
  "extends": "@cstn/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": "src/",
    "paths": {
      "@/*": ["./*"],
      "@cstn/ui/*": ["../../../packages/ui/src/*"],
      "@cstn/i18n/*": ["../../../packages/i18/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
